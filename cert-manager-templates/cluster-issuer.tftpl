apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: ${cluster_issuer_name}
spec:
  acme:
    server: ${cluster_issuer_server}
    email: amerced@dcibahealth.com
    privateKeySecretRef:
      name: letsencrypt
    solvers:
      - selector:
          dnsZones:
            - ${dns_zone}
        dns01:
          route53:
            region: ${aws_region}
            hostedZoneID: ${hosted_zone_id}
            role: ${role_arn}
